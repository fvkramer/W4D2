<form action="<%= cats_url %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label> 
    Name:
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <br>
  
  <% if @cat.sex == "M" %>
    <% male = "checked" %>
    <% female = "" %>
  <% else %>
    <% female = "checked" %>
    <% male = "" %>
  <% end %>  
  
  <label> 
    Sex:
    M: <input type="radio" name="cat[sex]" value="M" checked=<%= male %>>
    F: <input type="radio" name="cat[sex]" value="F" checked=<%= female %>>
  </label>
  <br>
  
  <label> 
    Color:
    <select name="cat[color]">
      <option disabled selected> -- select a color-- </option>
      <option value="black">Black</option>
      <option value="white">White</option>
      <option value="brown">Brown</option>
    </select>
  </label>
  <br>
  <label>Date:
    <input type="date" name="cat[birth_date]" value="">
  </label>
  <br>
  <label> Description: 
    <textarea name="cat[description]" rows="1" cols="80"></textarea>
  </label>
  <br>
  <br>
  <input type="submit" value="submit">
</form>